package atividades;

public class Funcionario {
	
	public String nome;
	public double salarioBruto=0,taxa=0,salarioLiquido=0;
		
	public void calcularNovoSalario() {
		
		salarioLiquido = salarioBruto - ((salarioBruto  * taxa)/100 ); 
		System.out.println("O Nome do funcionário é: " + nome);
		System.out.println("O Salário Bruto é: " + salarioBruto);
		System.out.println("A Taxa de imposto é: " + taxa);
		System.out.println("O Salário Líquido é: " + salarioLiquido);
	}		
	
	

}

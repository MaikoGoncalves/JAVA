package aula;

import java.util.Scanner;

public class Teste {

	public static void main(String[] args) {
   
		//java.util.Scanner nota = new Scanner(System.in); Essa aqui não sei utilizar ela 
		Scanner sc=new Scanner(System.in);	//Usei  essa.
	    
		//float nota, n2, n3, n4, n5, mf;    Fiz diferente embaixo.
		
		float nota, soma=0, media;
		
		for(int i=1; i < 5; i++ ) {// fiz um for para diminuir variaveis
	    	    
	    System.out.println("Entre com nota:");
	    nota= sc.nextFloat();
		soma=soma+nota;// usei a soma toda vez que passa aqui vai somando 
		}
	   
	    if(soma >= 70)
	    {
	 
	    System.out.println("Voce foi APROVADO.");
	    }
	    else
	    {
	    System.out.println("Voce foi REPROVADO.");
	    }
	    
}
}
}

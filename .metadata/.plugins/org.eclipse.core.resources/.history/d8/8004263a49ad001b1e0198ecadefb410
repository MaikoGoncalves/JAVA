package atividades;

public class Retangulo {
	public double comp;
	public double alt;
	public double area,diagonal,perimetro;
	public double calcularArea() {
		double area;
		area=alt*comp;
		return area;
	}
	public double calcularPerimetro() {
		double perimetro;
		perimetro=2*(alt*comp);
		return perimetro;
	}
	public double calcularDiagonal() {
		double diagonal;
		diagonal=Math.sqrt(alt*comp);
		return diagonal;
	}
	public void imprimir(double area,double perimetro,double diagonal){	
		System.out.println("\nAltura é: " + alt);
		System.out.println("Comprimento é: " + comp);
		System.out.println("\nA área é: " + area + "cm²");
		System.out.println("O Perímetro é: " + perimetro);
		System.out.println("A diagonal é: " + diagonal);
	}
}
package atividades;

public class Retangulo {
	
	public double comp;
	public double alt;
	public double area;
	public double perimetro;
	public double diagonal;
	
	public void calcularArea() {
		area=alt*comp;
	}
	public void calcularPerimetro() {
		perimetro=2*(alt*comp);
	}
	public void calcularDiagonal() {
		diagonal=Math.pow((alt*comp), 2);		
	}

	public void imprimir() {		
		System.out.println("Altura é: " + alt);
		System.out.println("Comprimento é: " + comp);
		System.out.println("A área é: " + area + "cm²");
		System.out.println("O Perímetro é: " + perimetro);
		System.out.println("A diagonal é: " + diagonal);
	}
	
	
}
	



package Notas;

import java.util.Scanner;

public class Aluno {
	Scanner sc = new Scanner(System.in);
	public String nome;
	public double[] nota = new double[6];
	public double soma=0;
	
	
	public void media() {
		
		    for(int i=0; i < 3; i++) {
			System.out.println("Digite A nota do aluno");
			nota[i] = sc.nextDouble();
			soma = nota[i] + soma; 
			}
		    System.out.println();
	}


}
